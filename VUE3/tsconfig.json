{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": false,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@core/*": ["./src/core/*"],
      "@api-automation/*": ["./src/modules/api-automation/*"],
      "@ui-automation/*": ["./src/modules/ui-automation/*"],
      "element-plus": ["./src/shared/ui/element-plus/index.ts"]
    }
  }
}
